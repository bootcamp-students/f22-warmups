def likes(names):
    
    if len(names) == 0:
        print("no one likes this")
    elif len(names) == 1:
        print(names[0] + ' likes this')
    elif len(names) == 2:
        print(names[0] + ' and ' + names[1] + ' like this')
    elif len(names) == 3:
        print(names[0] , ', ' , names[1] , ' and ', names[3] , ' like this')
    elif len(names) >= 4:
        remaining = len(names) - 2
        print(names[0] , ', ' , names[1] , f'and {remaining} others like this')
