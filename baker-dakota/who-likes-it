// if array length is less than 1 return no one likes this
// loop through array grabbing value from index and template literal it to the string
// if 3 people add comment between first 2 
//4 or more people starts at 2 names and 2 others and incremenets 2 others by 1

 function likes(names) {
  
  if (names.length < 1) {
      return 'no one likes this'
    } else if (names.length === 1) {
      return `${names[0]} likes this`
    } else if (names.length === 2) {
      return `${names[0]} and ${names[1]} like this`
    } else if (names.length === 3) {
      return `${names[0]}, ${names[1]} and ${names[2]} like this`
    } else {
      return `${names[0]}, ${names[1]} and ${names.length - 2} others like this`
    }
   }
