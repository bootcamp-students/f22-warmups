//push to array
//map array 
//set empty array
//loop through array 
//check if first index of array to lowercase does not equal first index
//check if index -1 equals - or _ if so uppercase it
function toCamelCase(str){
  let arr = str.split('')
 for (let i = 0; i < arr.length; i++) {
    if (arr[i-1] === '-' || arr[i-1] === '_') {
      arr[i] = arr[i].toUpperCase()
      arr.splice(i-1, 1)
      }  
   }
  return arr.join('')
}

  
